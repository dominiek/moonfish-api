{
  "name": "moonfish-api",
  "version": "0.1.0",
  "description": "Open Software for Token Distribution",
  "main": "dist",
  "license": "MIT",
  "engines": {
    "node": ">=9.6.1"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "dev": "nodemon -w src --exec \"MOCK_EMAIL=true NODE_ENV=dev node src/index.js\"",
    "start": "NODE_ENV=prod node src/index",
    "lint": "eslint src",
    "jest": "jest",
    "test": "jest -i src",
    "test:watch": "jest --watch -i src",
    "build:emails": "node emails/build"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "bcrypt": "^1.0.3",
    "bitcore-mnemonic": "^1.5.0",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.1.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.5",
    "mongoose": "^5.7.5",
    "node-env-configuration": "^1.0.3",
    "postmark": "^1.5.0"
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "jest": "^22.4.2",
    "juice": "^4.2.2",
    "nodemon": "^1.15.1",
    "pre-commit": "^1.2.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/test-helpers/setup-tests.js"
    ]
  }
}
